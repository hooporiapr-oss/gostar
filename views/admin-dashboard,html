<script>
let facilities = [];

// Load stats
async function loadStats() {
    try {
        const res = await fetch('/api/admin/stats');
        const data = await res.json();
        document.getElementById('totalFacilities').textContent = data.totalFacilities;
        document.getElementById('activeFacilities').textContent = data.activeFacilities;
        document.getElementById('totalSessions').textContent = data.totalSessions;
        document.getElementById('todaySessions').textContent = data.todaySessions;
    } catch (err) {
        console.error('Failed to load stats');
    }
}

// Load facilities
async function loadFacilities() {
    try {
        const res = await fetch('/api/admin/facilities');
        const data = await res.json();
        facilities = data.facilities;
        renderFacilities();
    } catch (err) {
        document.getElementById('facilitiesTable').innerHTML = 
            '<tr><td colspan="7" class="empty-state">Failed to load facilities</td></tr>';
    }
}

function renderFacilities() {
    const tbody = document.getElementById('facilitiesTable');
    
    if (facilities.length === 0) {
        tbody.innerHTML = '<tr><td colspan="7" class="empty-state">No facilities yet. Add your first one!</td></tr>';
        return;
    }
    
    tbody.innerHTML = facilities.map(f => `
        <tr>
            <td><strong>${f.name}</strong></td>
            <td>${f.email}</td>
            <td><span class="badge badge-${f.license_tier}">${f.license_tier}</span></td>
            <td>${f.resident_count || 0}</td>
            <td>${f.license_end ? new Date(f.license_end).toLocaleDateString() : '-'}</td>
            <td><span class="badge ${f.is_active ? 'badge-active' : 'badge-inactive'}">${f.is_active ? 'Active' : 'Inactive'}</span></td>
            <td>
                <button class="action-btn edit" onclick="editFacility(${f.id})">Edit</button>
                <button class="action-btn delete" onclick="deleteFacility(${f.id})">Delete</button>
            </td>
        </tr>
    `).join('');
}

function openModal(facility = null) {
    const modal = document.getElementById('facilityModal');
    const title = document.getElementById('modalTitle');
    const form = document.getElementById('facilityForm');
    const passwordGroup = document.getElementById('passwordGroup');
    
    form.reset();
    
    if (facility) {
        title.textContent = 'Edit Facility';
        document.getElementById('facilityId').value = facility.id;
        document.getElementById('facilityName').value = facility.name;
        document.getElementById('facilityEmail').value = facility.email;
        document.getElementById('facilityTier').value = facility.license_tier;
        document.getElementById('facilityResidents').value = facility.resident_count || 0;
        document.getElementById('facilityExpires').value = facility.license_end ? facility.license_end.split('T')[0] : '';
        passwordGroup.querySelector('label').textContent = 'New Password (leave blank to keep)';
    } else {
        title.textContent = 'Add Facility';
        document.getElementById('facilityId').value = '';
        passwordGroup.querySelector('label').textContent = 'Password';
    }
    
    modal.classList.add('show');
}

function closeModal() {
    document.getElementById('facilityModal').classList.remove('show');
}

function editFacility(id) {
    const facility = facilities.find(f => f.id === id);
    if (facility) openModal(facility);
}

async function deleteFacility(id) {
    if (!confirm('Are you sure you want to delete this facility? This cannot be undone.')) return;
    
    try {
        const res = await fetch(`/api/admin/facilities/${id}`, { method: 'DELETE' });
        if (res.ok) {
            loadFacilities();
            loadStats();
        }
    } catch (err) {
        alert('Failed to delete facility');
    }
}

document.getElementById('facilityForm').addEventListener('submit', async function(e) {
    e.preventDefault();
    
    const id = document.getElementById('facilityId').value;
    const data = {
        name: document.getElementById('facilityName').value,
        email: document.getElementById('facilityEmail').value,
        password: document.getElementById('facilityPassword').value,
        licenseTier: document.getElementById('facilityTier').value,
        residentCount: parseInt(document.getElementById('facilityResidents').value) || 0,
        licenseEnd: document.getElementById('facilityExpires').value || null
    };
    
    try {
        const url = id ? `/api/admin/facilities/${id}` : '/api/admin/facilities';
        const method = id ? 'PUT' : 'POST';
        
        const res = await fetch(url, {
            method,
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(data)
        });
        
        if (res.ok) {
            closeModal();
            loadFacilities();
            loadStats();
        } else {
            const err = await res.json();
            alert(err.error || 'Failed to save');
        }
    } catch (err) {
        alert('Connection error');
    }
});

function logout() {
    fetch('/api/logout', { method: 'POST' }).then(() => {
        window.location.href = '/';
    });
}

// Initialize
loadStats();
loadFacilities();
</script>

</body>
</html>
